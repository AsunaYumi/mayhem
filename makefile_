# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Mayhem_config = debug
  App_config = debug
endif
ifeq ($(config),release)
  Mayhem_config = release
  App_config = release
endif
ifeq ($(config),dist)
  Mayhem_config = dist
  App_config = dist
endif

PROJECTS := Mayhem App

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Mayhem:
ifneq (,$(Mayhem_config))
	@echo "==== Building Mayhem ($(Mayhem_config)) ===="
	@${MAKE} --no-print-directory -C src/Mayhem -f Makefile config=$(Mayhem_config)
endif

App: Mayhem
ifneq (,$(App_config))
	@echo "==== Building App ($(App_config)) ===="
	@${MAKE} --no-print-directory -C src/App -f Makefile config=$(App_config)
endif

clean:
	@${MAKE} --no-print-directory -C src/Mayhem -f Makefile clean
	@${MAKE} --no-print-directory -C src/App -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo "  dist"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Mayhem"
	@echo "   App"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"